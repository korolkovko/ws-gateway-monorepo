# Server Configuration
WS_HOST=0.0.0.0
WS_PORT=8080
API_PORT=8000
KIOSK_RESPONSE_TIMEOUT=10

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ADMIN_IDS=123456789,987654321
TELEGRAM_LOG_CHAT_ID=  # Optional: Chat ID for sending logs (leave empty to disable)
ENABLE_TELEGRAM_POLLING=true  # Set to false if running multiple instances

# JWT Configuration
JWT_SECRET=your_secret_key_here_change_in_production
JWT_EXPIRATION_DAYS=365
JWT_ALGORITHM=HS256

# Monitoring (Optional)
GRAFANA_CLOUD_API_KEY=
UPTIMEROBOT_API_KEY=

# Grafana Cloud - Prometheus (Get from: Grafana Cloud -> Prometheus -> Send Metrics)
GRAFANA_PROMETHEUS_URL=https://prometheus-prod-XX-XX.grafana.net/api/prom/push
GRAFANA_PROMETHEUS_USERNAME=123456
GRAFANA_PROMETHEUS_PASSWORD=your_grafana_cloud_api_key

# Grafana Cloud - Loki (Get from: Grafana Cloud -> Loki -> Send Logs)
GRAFANA_LOKI_URL=https://logs-prod-XX.grafana.net/loki/api/v1/push
GRAFANA_LOKI_USERNAME=123456
GRAFANA_LOKI_PASSWORD=your_grafana_cloud_api_key

# Logging
LOG_LEVEL=INFO
